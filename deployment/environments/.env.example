# Warp Zone Gems 环境配置模板
# 复制此文件为 .env.development, .env.staging, .env.production 并填入实际值

# 应用配置
VITE_APP_ENV=production
VITE_APP_NAME="Warp Zone Gems"
VITE_APP_VERSION=1.0.0

# Supabase 配置 (必需)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# 图片上传服务 (ImgBB)
VITE_IMGBB_API_KEY=your_imgbb_api_key

# AI 服务配置 (Silicon Flow)
VITE_SILICON_FLOW_API_KEY=your_silicon_flow_api_key

# 网站配置
VITE_SITE_URL=https://warpzonegems.com
VITE_SITE_TITLE="Warp Zone Gems - 精品游戏资源平台"
VITE_SITE_DESCRIPTION="专注于精品游戏资源的分享平台，致力于为全球游戏爱好者提供最优质的游戏发现和体验服务"

# 分析和监控 (可选)
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_SENTRY_DSN=your_sentry_dsn

# Docker 配置 (部署时使用)
DOCKER_REGISTRY=your_docker_registry
DOCKER_IMAGE_NAME=warp-zone-gems
DOCKER_TAG=latest

# 数据库配置 (如果使用自建数据库)
DATABASE_URL=postgresql://username:password@localhost:5432/warp_zone_gems
REDIS_URL=redis://localhost:6379

# SSL 证书配置 (生产环境)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# 备份配置
BACKUP_STORAGE_URL=s3://your-backup-bucket
BACKUP_RETENTION_DAYS=30

# 邮件服务配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 安全配置
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# 限流配置
RATE_LIMIT_WINDOW_MS=900000  # 15分钟
RATE_LIMIT_MAX_REQUESTS=100

# 缓存配置
CACHE_TTL=3600  # 1小时
CACHE_MAX_SIZE=1000

# 文件上传配置
MAX_FILE_SIZE=50  # MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# 搜索配置
SEARCH_RESULTS_PER_PAGE=20
MAX_SEARCH_SUGGESTIONS=10

# 社交媒体配置 (可选)
SOCIAL_TWITTER=@warpzonegems
SOCIAL_GITHUB=https://github.com/warpzonegems
SOCIAL_DISCORD=https://discord.gg/warpzonegems

# 开发工具配置
ENABLE_DEVTOOLS=false
ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_MONITORING=true

# CDN 配置 (可选)
CDN_URL=https://cdn.warpzonegems.com
STATIC_ASSETS_URL=${CDN_URL}/assets

# 支付配置 (如果需要)
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# 地理位置配置 (可选)
# GEOLOCATION_API_KEY=your_geolocation_api_key
# DEFAULT_COUNTRY=US
# DEFAULT_LANGUAGE=en

# 第三方服务配置
# RECAPTCHA_SITE_KEY=your_recaptcha_site_key
# RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key